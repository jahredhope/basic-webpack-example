{
  "compilerOptions": {
    "resolveJsonModule": true,
    "lib": ["es2020", "dom"],
    "jsx": "react",
    "module": "commonjs",
    "esModuleInterop": true,
    // "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "baseUrl": ".",
    "skipLibCheck": true,
    "paths": {
      "*": ["*"]
    }
  }
}
